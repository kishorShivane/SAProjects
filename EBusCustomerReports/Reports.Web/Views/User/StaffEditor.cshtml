@model Reports.Services.Models.StaffEditorViewModel
@{
    ViewBag.Title = "Staff Editor";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
@section scripts
{
    <script src="~/Scripts/Multiselect/bootstrap-multiselect.js"></script>
    <link href="~/Styles/Multiselect/bootstrap-multiselect.css" rel="stylesheet" />
    <link href="~/Styles/Jquery/jquery.ui.theme.css" rel="stylesheet" />
    <link href="~/Styles/Jquery/jquery.ui.dialog.css" rel="stylesheet" />
    <link href="~/Styles/Jquery/jquery.ui.button.css" rel="stylesheet" />
    <link href="~/Styles/Jquery/jquery.ui.core.css" rel="stylesheet" />
    <link href="~/Styles/Jquery/jquery.ui.base.css" rel="stylesheet" />
    <link href="~/Styles/Jquery/jquery.ui.all.css" rel="stylesheet" />
    <link href="~/Styles/Jquery/jquery-ui.css" rel="stylesheet" />
    <link href="~/Styles/table/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/JqueryVal/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/JqueryVal/jquery.validate.js"></script>
    <script src="~/Scripts/JqueryVal/jquery.validate.min.js"></script>
    <script src="~/Scripts/JqueryVal/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/JqueryVal/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/table/jquery.dataTables.min.js"></script>
    <style>
        div.ui-datepicker {
            font-size: 15px;
        }

        .ui-widget-header {
            background: #2fc1c1 !important;
        }

        .input-validation-error {
            border-color: red;
        }

        .field-validation-error {
            color: red;
            font-weight: bold;
        }

        .ui-state-active {
            background: #b7b41d !important;
        }
    </style>
    <script>
        $(document).ready(function () {
            $("#tabs").tabs();

            $("#StaffList").dataTable({
                "paging": true,
                "info": false,
            });

            $("#StaffType").dataTable({
                "paging": true,
                "StaffType": false,
            });

            $("#LocationGroup").dataTable({
                "paging": true,
                "info": false,
            });
        })
    </script>
}
<div id="page-wrapper">
    <div class="row">
        <div style="height: 3px;">
        </div>
        <div class="col-lg-12">
            <h2 class="page-header" style="margin: 5px; color: #5e5e5e !important">Staff Editor</h2>
        </div>
    </div>
    <div class="row" id="tabs">
        <ul>
            <li><a href="#tabs-1">Staff List</a></li>
            <li><a href="#tabs-2">Staff Type</a></li>
            <li><a href="#tabs-3">Location</a></li>
        </ul>
        <div id="tabs-1">
            <div class="row">
                <div class=""></div>
            </div>
            <div class="row">
                <table style="border: 0px;" class="table table-bordered table-hover table-striped" id="StaffList">
                    <thead>
                        <tr>
                            <th>Staff Id
                            </th>
                            <th>Name
                            </th>
                            <th>StaffType
                            </th>
                            <th>Location
                            </th>
                            <th>SerialNumber
                            </th>
                            <th>Active
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.StaffList.Count; i++)
                        {
                            <tr>
                                <td>@Model.StaffList[i].int4_StaffID</td>
                                <td>@Model.StaffList[i].str50_StaffName</td>
                                <td>@Model.StaffList[i].StaffTypeSelected</td>
                                <td>@Model.StaffList[i].LocationSelected</td>
                                <td>@Model.StaffList[i].SerialNumber</td>
                                <td>@Model.StaffList[i].bit_InUse</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div id="tabs-2">
            <div class="row">
                <div class=""></div>
            </div>
            <div class="row">
                <table style="border: 0px;" class="table table-bordered table-hover table-striped" id="StaffType">
                    <thead>
                        <tr>
                            <th>Id
                            </th>
                            <th>Name
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.StaffTypes.Count; i++)
                        {
                            <tr>
                                <td>@Model.StaffTypes[i].Value</td>
                                <td>@Model.StaffTypes[i].Text</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div id="tabs-3">
            <div class="row">
                <div class=""></div>
            </div>
            <div class="row">
                <table style="border: 0px;" class="table table-bordered table-hover table-striped" id="LocationGroup">
                    <thead>
                        <tr>
                            <th>Id
                            </th>
                            <th>Name
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Locations.Count; i++)
                        {
                            <tr>
                                <td>@Model.Locations[i].Value</td>
                                <td>@Model.Locations[i].Text</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
